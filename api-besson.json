          "postalCode": {
            "type": "string",
            "examples": [
              "63170"
            ]
          },
          "phoneNumber": {
            "type": "string",
            "examples": [
              "+33600000000"
            ]
          },
          "optinEmail": {
            "type": "integer",
            "format": "int64",
            "examples": [
              0
            ]
          },
          "optinPhone": {
            "type": "integer",
            "format": "int64",
            "examples": [
              0
            ]
          },
          "email": {
            "type": "string",
            "examples": [
              "john.doe@mail.com"
            ]
          },
